{
  "name": "firebaseasy",
  "version": "0.1.1",
  "description": "firebaseasy monorepo",
  "main": "lib/index.js",
  "scripts": {
    "test:firestore": "npm run test -w @firebaseasy/firestore",
    "test:storage": "npm run test -w @firebaseasy/storage",
    "test:fun": "npm run test -w @firebaseasy/functions",
    "dev:vite": "npm run dev -w vite",
    "build": "npx tsc",
    "build:firestore": "npm run build -w @firebaseasy/firestore",
    "build:storage": "npm run build -w @firebaseasy/storage",
    "deploy": "npx tsc && npm publish",
    "deploy:firestore": "npm run deploy -w @firebaseasy/firestore",
    "deploy:storage": "npm run deploy -w @firebaseasy/storage",
    "deploy:fun": "npm run deploy -w @firebaseasy/functions"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/91nakashima/firebaseasy"
  },
  "homepage": "https://github.com/91nakashima/firebaseasy",
  "keywords": [
    "firebase"
  ],
  "author": "91nakashima",
  "license": "ISC",
  "dependencies": {
    "build": "^0.1.4",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.20.1",
    "ts-loader": "^9.2.7",
    "webpack-dev-server": "^4.7.4",
    "workspace": "^0.0.1-preview.1"
  },
  "workspaces": [
    "packages/*",
    "packages/**/*"
  ]
}
